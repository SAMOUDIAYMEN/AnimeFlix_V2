@inject SignInManager<IdentityUser> signInManager;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimeFlix</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://kit.fontawesome.com/9de135de48.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" type="image/jpg" href="~/images/favicon.png" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("css", false)
</head>
<body class="bc-page">
    <section id="nav">
        <nav class="navbar navbar-expand-lg navbar-light ">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src="~/images/logo.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="ManageAnimes" asp-action="index">Manage Animes</a>
                                <a class="dropdown-item" asp-controller="categoryanimes" asp-action="index">Manage Category</a>
                                <a class="dropdown-item" asp-controller="Administration" asp-action="ListUsers">Manage Users</a>
                                <a class="dropdown-item" asp-controller="Administration" asp-action="ListRoles">Manage Roles</a>
                            </div>
                        </li>
                         }

                        <li class="nav-item">
                            <a class="nav-link " asp-controller="" asp-action="index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="index" asp-fragment="services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="index" asp-fragment="anime">Latest Anime</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Animes" asp-action="index">All Anime</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="index" asp-fragment="team">Team</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="index" asp-fragment="contact">Contact us</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-controller="account" asp-action="logout">
                                    <button type="submit" style="width:auto"
                                            class="nav-link btn btn-link py-0">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="account" asp-action="register">
                                    Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="account" asp-action="login">
                                    Login
                                </a>
                            </li>
                        }
                    </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </section>
    @RenderBody()

    <br>
    <footer class="bg-white">
        <div class="container py-5">
            <div class="row py-4">
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <img src="~/images/logo.png" alt="" width="180" class="mb-3" />
                    <p class="font-italic text-muted">Follow us on our socials.</p>
                    <ul class="list-inline mt-4">
                        <li class="list-inline-item"><a href="#" target="_blank" title="twitter"><i class="fa fa-twitter"></i></a></li>
                        <li class="list-inline-item"><a href="#" target="_blank" title="facebook"><i class="fa fa-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="#" target="_blank" title="instagram"><i class="fa fa-instagram"></i></a></li>
                        <li class="list-inline-item"><a href="#" target="_blank" title="pinterest"><i class="fa fa-pinterest"></i></a></li>
                        <li class="list-inline-item"><a href="#" target="_blank" title="vimeo"><i class="fa fa-vimeo"></i></a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                    <h6 class="text-uppercase font-weight-bold mb-4">Links</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><a asp-action="index" class="text-muted">Home</a></li>
                        <li class="mb-2"><a asp-action="index" asp-fragment="services" class="text-muted">Services</a></li>
                        <li class="mb-2"><a asp-action="index" asp-fragment="anime" class="text-muted">Anime List</a></li>
                        <li class="mb-2"><a asp-action="index" asp-fragment="team" class="text-muted">Team</a></li>
                        <li class="mb-2"><a asp-action="index" asp-fragment="contact" class="text-muted">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-6 mb-lg-0">
                    <h6 class="text-uppercase font-weight-bold mb-4">Newsletter</h6>
                    <p class="text-muted mb-4">Subscribe to our Newsletter.</p>
                    <div class="p-1 rounded border">
                        <div class="input-group">
                            <input type="email" placeholder="Enter your email address" aria-describedby="button-addon1" class="form-control border-0 shadow-0">
                            <div class="input-group-append">
                                <button id="button-addon1" type="submit" class="btn btn-link"><i class="fa fa-paper-plane"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Copyrights -->
        <div class="bg-light py-4">
            <div class="container text-center">
                <p class="text-muted mb-0 py-2">© 2021 Animeflex, All rights reserved.</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
